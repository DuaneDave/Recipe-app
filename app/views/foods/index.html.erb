<section>
  <%= link_to new_food_path do %>
    <button class='add-food'>Add Food</button>
  <% end %>

  <table>
    <tr>
      <th>Food</th>
      <th>Measurement Unit</th>
      <th>Quantity</th>
      <th>Unit Price</th>
      <th>Actions</th>
    </tr>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.measurement_unit %></td>
        <td><%= food.quantity %></td>
        <td>$<%= food.price %></td>
        <td><%= link_to 'Delete', foods_path %></td>
      <tr>
    <% end %>
  </table>
</section>
